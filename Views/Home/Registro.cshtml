@{
    ViewData["Title"] = "Registrarse";
}

@model log.Models.Login

<h2>Registro de Usuario</h2>


<form id="formRegistro" asp-controller="Account" asp-action="GuardarUsuario" method="post">
    <div class="form-group">
            <label for="Usuario">Usuario:</label>
            <input type="text" class="form-control" id="Usuario" name="Usuario" required>
    </div>
    <div class="form-group">
        <label for="Contraseña">Contraseña:</label>
        <input type="password" class="form-control" id="Contraseña" name="Contraseña" required>
    </div>
    <div class="form-group">
        <label for="Nombre">Nombre:</label>
        <input type="text" class="form-control" id="Nombre" name="Nombre">
    </div>
    <div class="form-group">
        <label for="Email">Email:</label>
        <input type="email" class="form-control" id="Email" name="Email">
    </div>
    <div class="form-group">
        <label for="Telefono">Teléfono:</label>
        <input type="text" class="form-control" id="Telefono" name="Telefono">
    </div>
    <button type="submit" class="btn btn-primary">Crear cuenta</button>
</form>
<h2>@ViewBag.Error</h2>
------------------------------------------------------------------------------------
<form action='@Url.Action("crearUsuario","Account")' method="post" onsubmit="return validarContraseña()">
    <input type="text" name="username" placeholder="Elija un nombre de usuario" required>
    <br><input type="password" name="contraseña" id="contraseña" placeholder="Cree una contraseña" onkeyup="validarContraseña()" required>
    <input type="password" name="contraseña2" placeholder="Repita la contraseña" required>
    <p>La contraseña debe tener por lo menos:</p>
    <span style="color:red" id="m1">1 carácter especial</span>
    <br><span style="color:red" id="m2">1 letra en mayúscula</span>
    <br><span style="color:red" id="m3">8 caracteres y un máximo de 20 caracteres</span>
    <br><input type="text" name="nombre" placeholder="Ingrese su nombre" required>
    <input type="text" name="email" placeholder="Ingrese un mail" required>
    <input type="text" name="telefono" placeholder="Ingrese su número de teléfono" required>
    <p>Responda una pregunta que se le preguntará en caso de que olvide su contraseña</p>
    <select name="pregunta">
        <option>Cuál es tu color favorito?</option>
        <option>Cómo se llama tu mascota?</option>
        <option>En qué barrio naciste?</option>
        <option>Cuál es tu comida favorita?</option>
    </select>
    <br><input type="password" name="respuesta" placeholder="Ingrese aquí la respuesta" required>

    <br><input type="submit" value="Registrarme">
</form>
<br>@ViewBag.error1
<br>@ViewBag.error2
<br>@ViewBag.error3