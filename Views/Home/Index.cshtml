<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>WorldConcerts</title>
  </head>
  <body>
  <!-- Carrousel !-->
<div id="carouselExampleCaptions" class="carousel slide">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="../imagenes/bb.png" class="d-block w-100">
      <div class="carousel-caption d-none d-md-block">
        <h2>Bad Bunny</h2>
      </div>
    </div>
    <div class="carousel-item">
      <img src="../imagenes/tw.jpg" class="d-block w-100">
      <div class="carousel-caption d-none d-md-block">
        <h2>The Weeknd</h2>
      </div>
    </div>
    <div class="carousel-item">
      <img src="../imagenes/ra.jpg" class="d-block w-100">
      <div class="carousel-caption d-none d-md-block">
        <h2>Rauw Alejandro</h2>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
<!-- search -->
  <form class="d-flex" role="search">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
      </form>
<!-- Navbar !-->
<nav class="navbar navbar-expand-lg bg-body-tertiary">
  <div class="container-fluid">
    <a class="navbar-brand" href="#">Navbar</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Ubicacion
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item">Argentina</a></li>
            <li><a class="dropdown-item">Chile</a></li>
            <li><a class="dropdown-item">Colombia</a></li>
            <li><a class="dropdown-item">Uruguay</a></li>
          </ul>
        </li>
                <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Género
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item">Rap</a></li>
            <li><a class="dropdown-item">Rock</a></li>
            <li><a class="dropdown-item">Trap</a></li>
            <li><a class="dropdown-item">Pop</a></li>
          </ul>
        </li>
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Mes
          </a>
          <ul class="dropdown-menu">
            <li><a class="dropdown-item">Enero</a></li>
            <li><a class="dropdown-item">Febrero</a></li>
            <li><a class="dropdown-item">Marzo</a></li>
            <li><a class="dropdown-item">Abril</a></li>
            <li><a class="dropdown-item">Mayo</a></li>
            <li><a class="dropdown-item">Junio</a></li>
            <li><a class="dropdown-item">Julio</a></li>
            <li><a class="dropdown-item">Agosto</a></li>
            <li><a class="dropdown-item">Septiembre</a></li>
            <li><a class="dropdown-item">Octubre</a></li>
            <li><a class="dropdown-item">Noviembre</a></li>
            <li><a class="dropdown-item">Diciembre</a></li>
          </ul>
        </li>

      </ul>
      
    </div>
  </div>
</nav>

<!-- body-->
 @foreach (Concierto Con in ViewBag.ListConciertos)
  {
    <div class="card" style="width: 18rem;">
      <img src="@Con.Imagen" class="card-img-top" alt="@Con.Nombre">
      <div class="card-body">
        <h5 class="card-title">@Con.Nombre</h5>
        <a href="#" class="btn btn-primary">Ver información</a>
      </div>
    </div>
  }

  </body>
</html>
